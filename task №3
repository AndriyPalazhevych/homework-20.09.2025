import requests
from bs4 import BeautifulSoup
from flask import Flask, render_template, request

def parse_songs():
    url = "https://soundcloud.com/semataryy"
    response = requests.get(url)
    soup = BeautifulSoup(response.text, "html.parser")

    songs = []

    chart_items = soup.select("li.o-chart-results-list__item h3")
    artists = soup.select("li.o-chart-results-list__item span.c-label")

    for i in range(min(100, len(chart_items))):
        song_title = chart_items[i].get_text(strip=True)
        artist = artists[i].get_text(strip=True)
        songs.append(f"{song_title} - {artist}")

    with open("songs.txt", "w", encoding="utf-8") as f:
        for song in songs:
            f.write(song + "\n")

app = Flask(__name__)

@app.route('/')
def index():
    try:
        with open("songs.txt", "r", encoding="utf-8") as f:
            songs = [line.strip() for line in f.readlines()]
    except FileNotFoundError:
        songs = []
    return render_template('index1.html', songs=songs)

@app.route('/show_songs', methods=["GET"])
def show_songs():
    with open("songs.txt", "r", encoding="utf-8") as f:
        songs = f.readlines()
    songs = [song.strip() for song in songs]
    return render_template('songs.html', songs=songs)

if __name__ == "__main__":
    app.run(debug=True)

if __name__ == "__main__":
    parse_songs()