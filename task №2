import requests
import json

url = "https://api.jikan.moe/v4/top/anime"

response = requests.get(url)

if response.status_code == 200:
    data = response.json()
    anime_list = data.get("data", [])

    popular_anime = []
    for anime in anime_list:
        title = anime.get("title")
        score = anime.get("score")
        popular_anime.append({
            "title": title,
            "score": score
        })
    with open("popular_anime.json", "w", encoding="utf-8") as f:
        json.dump(popular_anime, f, ensure_ascii=False, indent=4)

    print("Файл 'popular_anime.json' успішно створено.")
else:
    print(f"Помилка при запиті до API: {response.status_code}")